<l111l:YandexLoginWindow xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:l111l="clr-namespace:Ecng.Xaml.Yandex"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         
                         xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
                         xmlns:dx="clr-namespace:DevExpress.Xpf.Core;assembly=DevExpress.Xpf.Core.v22.1"
                         Window.Title="{Static loc:LocalizedStrings.ShareFile}" FrameworkElement.Height="850"
                         FrameworkElement.Width="640" Window.WindowStartupLocation="CenterScreen" Window.Topmost="True"
                         Window.ShowInTaskbar="False">
  <dx:LoadingDecorator x:Name="BusyIndicator" IsSplashScreenShown="True">
    <dx:LoadingDecorator.SplashScreenTemplate>
      <DataTemplate>
        <dx:WaitIndicator DeferedVisibility="True" ContentControl.Content="{Binding Title}"/>
      </DataTemplate>
    </dx:LoadingDecorator.SplashScreenTemplate>
    <Grid>
      <WebBrowser Name="Browser"/>
    </Grid>
  </dx:LoadingDecorator>
</l111l:YandexLoginWindow>