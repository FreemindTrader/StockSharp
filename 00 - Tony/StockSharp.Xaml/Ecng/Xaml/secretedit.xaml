<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Ecng.Xaml.SecretEdit"
    xmlns:dxes="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:ecngXaml="clr-namespace:Ecng.Xaml">

    <dxes:PasswordBoxEdit
        x:Name="PasswordCtrl"
        EditValueChanged="BaseEdit_OnEditValueChanged"
        Control.BorderBrush="{Binding RelativeSource={RelativeSource AncestorType={x:Type ecngXaml:SecretEdit}}, Path=BorderBrush}"
        Control.BorderThickness="{Binding RelativeSource={RelativeSource AncestorType={x:Type ecngXaml:SecretEdit}}, Path=BorderThickness}" />
</UserControl>