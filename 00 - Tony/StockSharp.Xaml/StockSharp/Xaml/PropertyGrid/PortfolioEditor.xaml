<dxe:ComboBoxEdit
    x:Class="StockSharp.Xaml.PropertyGrid.PortfolioEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
    AllowCollectionView="true"
    AllowDefaultButton="False"
    AllowRejectUnknownValues="true"
    AssignNullValueOnClearingEditText="true"
    AutoComplete="true"
    ImmediatePopup="true"
    IncrementalFiltering="True">

    <dxe:ButtonEdit.Buttons>
        <dxe:ButtonInfo
            x:Name="SearchBtn"
            Click="SearchBtn_Click"
            GlyphKind="Search"
            ToolTipService.ToolTip="{x:Static loc:LocalizedStrings.Str3657}" />
        <dxe:ButtonInfo
            x:Name="CancelBtn"
            Click="CancelBtn_Click"
            GlyphKind="Cancel"
            ToolTipService.ToolTip="{x:Static loc:LocalizedStrings.Cancel}" />
    </dxe:ButtonEdit.Buttons>

</dxe:ComboBoxEdit>
