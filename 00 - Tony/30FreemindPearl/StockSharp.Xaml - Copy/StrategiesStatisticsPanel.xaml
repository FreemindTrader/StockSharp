<UserControl
    x:Class="StockSharp.Xaml.StrategiesStatisticsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:basegrid="clr-namespace:StockSharp.Xaml.GridControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:local="clr-namespace:StockSharp.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <FrameworkElement.Resources>
        <local:WidthToPointNumberConverter x:Key="WidthToPointNumberConverter" />
        <Style TargetType="{x:Type dxg:GridColumn}">
            <Setter Property="local:PointCountDepProp.PointCount" Value="{Binding RelativeSource={RelativeSource Self}, Path=ActualDataWidth, Converter={StaticResource WidthToPointNumberConverter}}" />
        </Style>
    </FrameworkElement.Resources>

    <basegrid:BaseGridControl
        x:Name="ResultsGrid"
        CustomUnboundColumnData="ResultsGrid_CustomUnboundColumnData"
        ItemDoubleClick="ResultsGrid_ItemDoubleClick"
        SelectedItemChanged="ResultsGrid_SelectedItemChanged" />

</UserControl>
