<UserControl
    x:Class="StockSharp.Xaml.AdvertisePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aod="clr-namespace:TheArtOfDev.HtmlRenderer.WPF;assembly=HtmlRenderer.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:local="clr-namespace:StockSharp.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <dx:SimpleButton Grid.Column="0" Click="SimpleButton_Click_Previous">
            <Image>
                <Image.Source>
                    <local:IconsExtension Key="BackArrow" />
                </Image.Source>
            </Image>
        </dx:SimpleButton>
        <dx:SimpleButton Grid.Column="2" Click="SimpleButton_Click_Next">
            <Image>
                <Image.Source>
                    <local:IconsExtension Key="NextArrow" />
                </Image.Source>
            </Image>
        </dx:SimpleButton>
        
    </Grid>

</UserControl>
